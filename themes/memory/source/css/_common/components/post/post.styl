.custom-post {
  margin-bottom: 40px;
  &:last-child {
    margin-bottom: 0;
  }
}
.post-body {
  font-family: $font-family-posts;
  +mobile() {
    word-break: break-word;
  }
}

.post-body .fancybox img {
  display: block !important;
  margin: 0 auto;
  cursor: pointer;
  cursor: zoom-in;
  cursor: -webkit-zoom-in;
}

.post-body .image-caption {
  margin: -20px auto 15px;
  text-align: center;
  font-size: $font-size-base;
  color: $grey-dark;
  font-weight: bold;
  line-height: 1;
}

.post-body .figure .caption {
  @extend .post-body .image-caption;
}

.post-sticky-flag {
  display: inline-block;
  font-size: 16px;
  -ms-transform: rotate(30deg);
  transform: rotate(30deg);
}

.use-motion {
  if hexo-config('motion.transition.post_block') {
    .post-block,
    .pagination,
    .comments { opacity: 0; }
  }
  if hexo-config('motion.transition.post_header') { .post-header { opacity: 0; } }
  if hexo-config('motion.transition.post_body') { .post-body { opacity: 0; } }
  if hexo-config('motion.transition.coll_header') { .collection-title { opacity: 0; } }
}

.post-block-home {
  box-shadow: 0 0 10px rgba(202,203,203,.6);
  height: 250px;
  border-radius: 10px;
  +desktop() {
    padding: 30px;
  }
  +tablet() {
    padding: 30px;
  }
  &:hover {
    box-shadow: 0 0 15px rgba(202,203,203,.8);
  }
}

.post-block-home .post-sub-content {
  width: 45%;
  box-sizing: border-box;
  .post-title {
    margin-top: 0;
  }
  .post-meta {
    margin-bottom: 10px;
  }
}

.custom-post:nth-child(odd) {
  .post-sub-content {
    float: right;
    padding-left: 30px;
  }
  .post-sub-img {
    float: left;
  }
  .post-button {
    text-align: right
  }
  .post-title {
    text-align: right;
  }
  .post-meta {
    text-align: right;
  }
}

.custom-post:nth-child(even) {
  .post-sub-content {
    float: left;
    padding-right: 30px;
  }
  .post-sub-img {
    float: right;
  }
  .post-button {
    text-align: left
  }
  .post-title {
    text-align: left;
  }
  .post-meta {
    text-align: left;
  }
}

.post-block-home .post-sub-img {
  width: 55%;
  .post-img-link {
    display: block;
    border-radius: 10px;
    height: 250px;
    outline: none;
    text-decoration: none;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center center;
    transition: all 0.5s;
    &:hover {
      background-size: 130% 130%;
    }
  }
}

@import "post-expand";
@import "post-collapse";
@import "post-type";
@import "post-title";
@import "post-meta";
@import "post-button";
@import "post-tags";
@import "post-nav";
@import "post-eof";
@import "post-gallery";
@import "post-reward" if hexo-config('alipay') or hexo-config('wechatpay') or hexo-config('bitcoin');
@import "post-copyright" if hexo-config('post_copyright.enable');
@import "post-widgets" if (hexo-config('facebook_sdk.enable') and hexo-config('facebook_sdk.like_button')) or (hexo-config('vkontakte_api.enable') and hexo-config('vkontakte_api.like')) or hexo-config('rating.enable') or (hexo-config('needmoreshare2.enable') and hexo-config('needmoreshare2.postbottom.enable'));
@import "post-rtl";
@import "post-reading_progress" if hexo-config('reading_progress.enable');
